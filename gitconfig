[alias]
    cm = commit
    cmm = commit -m
    cmv = commit --verbose
    co = checkout
    cb = checkout -b
    st = status
    praise = blame
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'

[apply]
    whitespace = strip

[diff]
    color = auto
    rename = copy
    algorithm = histogram

[pager]
    color = true

[status]
    color = auto

[push]
    default = current
	autoSetupRemote = true
[pull]
	rebase = false
[url "git@github.com:"]
	insteadOf = https://github.com/
